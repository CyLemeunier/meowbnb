<div class="container">
  <div class="row text-center">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :first_name, required: true %>
          <%= f.input :last_name, required: true %>
          <%= f.input :address, required: true %>
          <%= f.input :city, required: true %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, autocomplete: "off", hint: "Leave blank if no change necessary", required: false %>
          <%= f.input :password_confirmation, required: false %>
          <%= f.input :current_password, hint: "Needed to confirm your changes", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update", class: "form-button", style: 'width:100%' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row text-center">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <h3>Cancel my account</h3>
      <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, class: "btn form-button", data: { confirm: "Are you sure?" }, style: 'width:100%' %>
      <%= link_to "Back", user_path(current_user) %>
    </div>
  </div>
</div>
