<div class="container">
  <div class="row text-center">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <%= render "edit_user_form" %>
    </div>
  </div>
  <div class="row text-center">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <h3>Cancel my account</h3>
      <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, class: "btn form-button", data: { confirm: "Are you sure?" }, style: 'width:100%' %>
      <%= link_to "Back", user_path(current_user) %>
    </div>
  </div>
</div>
