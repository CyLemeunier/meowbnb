<%= simple_form_for(@user, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>


  <div class="form-inputs">
    <div class="row">
      <div class="light-padding">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :first_name, required: true %>
          <%= f.input :last_name, required: true %>
          <%= f.input :address, required: true %>
          <%= f.input :city, required: true %>
        </div>
      </div>
      <div class="light-padding">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, autocomplete: "off", hint: "Leave blank if no change necessary", required: false %>
          <%= f.input :password_confirmation, required: false %>
          <%= f.input :current_password, hint: "Needed to confirm your changes", required: true %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: "form-button", style: 'width:100%' %>
    </div>
  </div>
<% end %>
