<%if @user === current_user %>

  <div class="container">
    <div class="tabs">
      <%= link_to "Your Listings", listings_path(@user.cats), class: "tab active" %>
      <%= link_to "Your Bookings", listings_path(@user.cats), class: "tab" %>
      <%= link_to "Profile", listings_path(@user.cats), class: "tab" %>
    </div>
  </div>
<% end %>

<div class="container" id="users_show_page">

  <div class="top-title-alignment">

    <div style="background-image: url(<%= @user.photo %>); height: 60px; width: 60px; background-size: cover !important;" class="avatar">
    </div>
    <div class="user-title">
      <h3><%= @user.first_name + " " + @user.last_name %></h3>
      <p><%= @user.city %></p>
    </div>

    <div class="user-buttons">
      <%if current_user == @user %>
        <%= link_to "Add a cat", new_cat_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
        <%= link_to "Edit profile", edit_user_registration_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
      <% end %>
    </div>

  </div>

  <div class="row">
    <% @user.cats.each do |c|%>
      <div class="col-xs-12 col-sm-4">
        <%= render "card", cat: c %>
      </div>
    <% end %>
  </div>

  <div>
    <ul>
      <% @user.reservations.each do |reservation| %>
        <li><%= reservation.start_date %></li>
      <% end %>
    </ul>
  </div>
</div>
