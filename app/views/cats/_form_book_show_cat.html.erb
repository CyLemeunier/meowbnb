<%= simple_form_for([@cat, @reservation]) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :start_date, as: :string, input_html: {value: checkin, class: "datepicker" }, :label => "Checkin"%>
  </div>
  <div class="form-inputs">
    <%= f.input :end_date, as: :string, input_html: {value: checkout, class: "datepicker" }, :label => "Checkout" %>
  </div>
  <div>
    <p>Price : <%= @cat.price_per_day %>€ * <%= ((Date.strptime(checkout) - Date.strptime(checkin)).to_i) %> jours = <%= @cat.price_per_day*((Date.strptime(checkout) - Date.strptime(checkin)).to_i) %>€</p>
  </div>
  <div class="form-actions text-center">
    <%= f.button :submit, "Book !", style: 'width:100%' %>
  </div>
<% end %>
