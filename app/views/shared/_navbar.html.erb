<div class="<%=  params[:action] == "home" ? 'navbar-wagon-fixed' : 'navbar-wagon' %>">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <% if params[:action] == "home" %>
      <h3><i class="fa fa-paw" aria-hidden="true"></i></h3>
    <% else %>
      <h3><i class="fa fa-paw" aria-hidden="true"></i> Meowbnb</h3>
    <%end%>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Profile picture and dropdown -->
      <div>
        <h6><%= current_user.first_name.capitalize %></h6>
      </div>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <div style="background-image: url(<%= current_user.photo %>); height: 40px; width: 40px; background-size: cover !important;" class="avatar dropdown-toggle" id= "navbar-wagon-menu" data-toggle="dropdown"></div>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to user_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-home"></i>  <%= t ".profile", default: "Home" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Button (call-to-action) -->
      <%= link_to t(".top_call_to_action", default: "Sign Up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-button btn" %>

      <!-- Button (call-to-action) -->
      <%= link_to t(".top_call_to_action", default: "Log In"), "#", class: "navbar-wagon-item navbar-wagon-button btn", data: {toggle: "modal", target: "#logInModal"} %>

    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">

      <% if user_signed_in? %>

        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to user_path(current_user) do %>
              <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
            <% end %>
          </li>
          <li>
            <%= link_to root_path do %>
              <i class="fa fa-home"></i>  <%= t ".profile", default: "Home" %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
            <% end %>
          </li>
        </ul>

      <% else %>

        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to t(".sign_in", default: "Sign Up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to t(".top_call_to_action", default: "Log In"), "#", class: "navbar-wagon-item navbar-wagon-link", data: {toggle: "modal", target: "#logInModal"} %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>

